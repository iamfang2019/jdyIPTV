name: IPV6

on:
  watch:
    types: [started]
  schedule:
    - cron: 0,30 * * * *
  workflow_dispatch:

env:
  TZ: Asia/Shanghai

jobs:
  Update:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v3

    - name: GetTime
      run: echo "DATE=$(date +'%Y-%m-%d %H:%M:%S CST')" >> $GITHUB_ENV

    - name: Update
      run: |
        # IPV6Ê∫ê
        rm -f ipv6.txt && wget https://raw.githubusercontent.com/Meroser/IPTV/main/IPTV-tvbox.txt -O ipv6.txt


    - name: Clean
      run: |
        git config --local user.email "369825970@qq.com"
        git config --local user.name "mlyuanlang"
        git checkout --orphan latest_branch
        git add -A
        git commit -am "$DATE"
        git branch -D main
        git branch -m main

    - name: Push
      run: git push -f origin main
